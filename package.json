{
  "name": "@skyscanner/eslint-config-skyscanner",
  "version": "23.0.0",
  "description": "Skyscanner's ESLint config.",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Skyscanner/eslint-config-skyscanner"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "browserslist": [
    "Chrome >= 109",
    "Edge >= 129",
    "Firefox >= 131",
    "Safari >= 15",
    "Samsung >= 26"
  ],
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "skyscanner",
    "javascript",
    "styleguide"
  ],
  "main": "eslint.config.js",
  "exports": {
    ".": "./eslint.config.js",
    "./vitest": "./vitest.js"
  },
  "scripts": {
    "lint": "npm run lint:js",
    "lint-staged": "lint-staged",
    "lint:js": "eslint . -c eslint.config.self.js",
    "lint:js:fix": "eslint . -c eslint.config.self.js --fix",
    "prepare": "husky install",
    "pretest": "npx ensure-node-env@2.0.0",
    "test": "(cd test && ./e2e-test.sh)"
  },
  "lint-staged": {
    "!(LICENSE)*.md": [
      "prettier --write"
    ],
    "**/!(package|package-lock).json": "prettier --write",
    "**/*.js": "npm run lint:js:fix",
    "**/*.yml": "prettier --write"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.19.0",
    "@skyscanner/eslint-plugin-rules": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/eslint-plugin": "^1.6.6",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-backpack": "^7.2.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "globals": "^15.14.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.23.0"
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4"
  }
}
